{
  "name": "automata-store-api",
  "version": "0.1.0",
  "description": "A toy eCommerce API.",
  "main": "dist/index.js",
  "repository": "https://github.com/Renddslow/automata-store-api",
  "author": "Matt McElwee <mubatt@wyopub.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "mannish": "^4.0.1",
    "mysql2": "^2.3.3",
    "polka": "^0.5.2",
    "qs": "^6.10.3"
  },
  "prettier": "@dmsi/prettier-config",
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "@types/polka": "^0.5.4",
    "ava": "^4.0.1",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.23",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "mri": "^1.2.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "sinon": "^13.0.1",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "node ./build.js",
    "build:watch": "yarn build --watch",
    "build:prod": "yarn build --minify",
    "db:create": "docker run -d --name automata -p 8081:3306 -e MYSQL_ROOT_PASSWORD=unified-story -v \"$(pwd)/sandcrawler.sql:/docker-entrypoint-initdb.d/dump.sql\" mysql:latest",
    "db:remove": "docker stop automata && docker rm automata",
    "serve": "nodemon dist/index.js",
    "start": "run-p build:watch serve",
    "test": "ava",
    "test:coverage": "nyc ava"
  },
  "ava": {
    "concurrency": 4,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "1m"
  }
}
